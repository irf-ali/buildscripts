{
  "steps":[
    {
      "args": [
        "clone",
        "https://github.com/google/oss-fuzz.git",
        "--depth",
        "1"
      ],
      "name": "gcr.io/cloud-builders/git"
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "--tag",
        "gcr.io/oss-fuzz/snakeyaml",
        "."
      ],
      "dir": "oss-fuzz/projects/snakeyaml"
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "env": [
        "ARCHITECTURE=x86_64",
        "FUZZING_ENGINE=libfuzzer",
        "FUZZING_LANGUAGE=jvm",
        "SANITIZER=coverage",
        "PROJECT_NAME=snakeyaml",
      ],
      "args": [
        "run",
        "--rm", 
        "--privileged", 
        "--shm-size=2g",
        "--platform",
        "linux/amd64",
        "-e",
        "HELPER=True",
        "-e",
        "ARCHITECTURE=x86_64",
        "-e",
        "FUZZING_ENGINE=libfuzzer",
        "-e",
        "FUZZING_LANGUAGE=jvm",
        "-e",
        "PROJECT_NAME=snakeyaml",
        "-e",
        "SANITIZER=coverage",
        "-v",
        "oss-fuzz/build/out/snakeyaml",
        "-v",
        "oss-fuzz/build/work/snakeyaml",
        "-t",
        "gcr.io/oss-fuzz/snakeyaml",
       ],
      "id": "compile-libfuzzer-coverage-x86_64"
    },
    {
      "name": "bash",
      "script": "echo \"Listing build/out directory\" && ls build/out"
      "dir": "oss-fuzz"
    },
    {
      "name": "gcr.io/cloud-builders/gsutil",
      "entrypoint": "sh",
      "args": [
        "-c",
        "gsutil -m rm -rf gs://irali-test-cloudbuild/snakeyaml/build/out || exit 0"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gsutil",
      "args": [
        "-m",
        "cp",
        "-r",
        "oss-fuzz/build/out/snakeyaml",
        "gs://irali-test-cloudbuild/snakeyaml"
      ]
    }
  ]
}
